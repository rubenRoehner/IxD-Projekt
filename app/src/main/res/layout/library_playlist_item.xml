<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout14"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <ImageView
        android:id="@+id/library_playlistItem_cover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/gray"
        android:clickable="false"
        android:padding="8dp"
        android:tint="@color/lightGrayBG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_album_black_24dp" />

    <TextView
        android:id="@+id/library_playlistItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/roboto_black"
        android:text="Playlist-Title"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/library_playlistItem_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/library_playlistItem_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/roboto"
        android:text="Von Max Mustermann"
        android:textColor="@color/lightGray"
        app:layout_constraintStart_toEndOf="@+id/library_playlistItem_cover"
        app:layout_constraintTop_toBottomOf="@+id/library_playlistItem_title" />
</androidx.constraintlayout.widget.ConstraintLayout>